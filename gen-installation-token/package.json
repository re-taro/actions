{
  "name": "gen-installation-token",
  "description": "Generate GitHub App installation token",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.12",
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "main": "lib/index.cjs",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --platform=node --target=es2021 --outfile=lib/index.cjs",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint . --ext .ts,.cjs,json",
    "lint:prettier": "prettier --check **/*.{ts,cjs,json}",
    "lint:ts": "tsc -p . --noEmit",
    "fmt": "run-s -c fmt:*",
    "fmt:eslint": "pnpm lint:eslint --fix",
    "fmt:prettier": "prettier --write **/*.{ts,cjs,json}"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "@octokit/auth-app": "6.0.0",
    "@octokit/request": "8.1.1",
    "is-base64": "1.1.0"
  },
  "devDependencies": {
    "@re-taro/eslint-config": "1.10.1",
    "@tsconfig/strictest": "2.0.1",
    "@types/is-base64": "1.1.1",
    "@types/node": "20.5.4",
    "esbuild": "0.19.2",
    "eslint": "8.47.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2",
    "typescript": "5.2.2"
  }
}

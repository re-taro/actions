{
  "name": "gen-installation-token",
  "description": "Generate GitHub App installation token",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.12.1",
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "main": "lib/index.cjs",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --platform=node --target=es2021 --outfile=lib/index.cjs",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . -c",
    "lint:ts": "tsc -p . --noEmit",
    "fmt": "run-s -c fmt:*",
    "fmt:eslint": "pnpm lint:eslint --fix",
    "fmt:prettier": "prettier . -w"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "@octokit/auth-app": "6.0.1",
    "@octokit/request": "8.1.6",
    "is-base64": "1.1.0"
  },
  "devDependencies": {
    "@re-taro/eslint-config": "2.4.0",
    "@tsconfig/strictest": "2.0.2",
    "@types/is-base64": "1.1.3",
    "@types/node": "20.10.5",
    "esbuild": "0.19.10",
    "eslint": "8.56.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "typescript": "5.3.3"
  }
}
